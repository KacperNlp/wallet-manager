{
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "client/app/**/*.tsx": "prettier --write",
    "client/app/**/**/*.tsx": "prettier --write",
    "client/components/*.tsx": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write . && git add -A ."
    }
  }
}
